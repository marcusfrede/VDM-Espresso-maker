class CoolingElement

instance variables

protected ID	: nat;

operations

public CoolingElement: nat ==> CoolingElement
	CoolingElement (id) ==
		ID := id;

public GetID: () ==> nat
	GetID() ==
		return ID;

public Step: () ==> ()
	Step() == (
	  let ot = World`env.ReadTemp(),
		 		nt = World`env.DecTemp()
		in
		if World`env.verbose then	IO`printf("\nDecremented temperature from %1s to %2s", [ot,nt]);
)
--post World`env.ReadTemp() = World`env.ReadTemp() - 1

end CoolingElement