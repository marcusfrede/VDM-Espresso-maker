class CoolingElement

instance variables

protected ID	: nat;

operations

public CoolingElement: nat ==> CoolingElement
	CoolingElement (id) ==
		ID := id;

public GetID: () ==> nat
	GetID() ==
		return ID;

public Step: () ==> ()
	Step() == (
	  let ot = CM`waterTankController.ReadTemp(),
		 		nt = CM`waterTankController.DecTemp()
		in
			if World`env.Verbose() then	IO`printf("\nDecremented temperature from %1s to %2s", [ot,nt]);
)

end CoolingElement
