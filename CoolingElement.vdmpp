class CoolingElement

instance variables

protected ID	: nat;

operations

public CoolingElement: nat ==> CoolingElement
	CoolingElement (id) ==
		ID := id;

public GetID: () ==> nat
	GetID() ==
		return ID;

public Step: () ==> ()
	Step() == (
	  dcl otmp : nat := World`env.ReadTemp();
		dcl ntmp : nat := World`env.DecTemp();	
		IO`printf("\nDecremented temperature from %1s to %2s", [otmp,ntmp]);
)
--post World`env.ReadTemp() = World`env.ReadTemp() - 1

end CoolingElement