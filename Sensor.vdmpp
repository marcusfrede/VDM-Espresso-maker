class Sensor

types
public sensorType 	= <TEMPSENSOR> | <PRESSURESENSOR> | <LEVELSENSOR> | <NONE>;

instance variables

protected ID	: [nat] := nil;
protected Type : sensorType :=  <NONE>;
protected Value	: [int] := nil;

operations

public GetID: () ==> nat
	GetID() ==
		return ID;
		
public GetType: () ==> sensorType
	GetType() ==
		return Type;

pure public ReadValue: () ==> nat
	ReadValue() ==
		return Value;

public Step: () ==> ()
	Step() ==
		is subclass responsibility

end Sensor