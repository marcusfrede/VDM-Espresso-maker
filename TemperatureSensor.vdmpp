class TemperatureSensor is subclass of Sensor

operations

public TemperatureSensor: nat * sensorType ==> TemperatureSensor
	TemperatureSensor (id, type) ==
		(ID := id;
		Type := type;
		);

public Step: () ==> ()
	Step() == ( 
		Value := World`env.ReadTemp();
	  if World`env.verbose then	IO`printf("\nCurrent water temperature %1s", [Value]);
);

end TemperatureSensor